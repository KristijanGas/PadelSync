<!DOCTYPE html>
<html>
    <head>
        <% if (show_search_results === true) { %>
            <link rel="stylesheet" type="text/css" href="../styles/terrain_search.css">
        <% } %>
        <% if (show_search_results === false) { %>
            <link rel="stylesheet" type="text/css" href="styles/terrain_search.css">
        <% } %>
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <script src="/scripts/userLocation.js" defer></script>
        <script src="/scripts/socket.js" defer></script>
        <script src="/socket.io/socket.io.js"></script>
    </head>
    <body> 
        <div class="BackgroundTop">
            <h1>Terrain Search</h1>
            <div class="HeaderButtonsWrapper">
                <%- include("./partials/header") %>
            </div>
        </div>

        <div class="SearchContainer">
            <form id="terrainSearchForm" method="GET" action="/terrain_search/results">
                <label>Username:</label>
                    <input type="text" id="username" name="username">
                <br><br>

                <label>Ceiling Height (>=):</label>
                    <input type="number" id="visinaStropa" name="visinaStropa" min="0" step="any">
                <br><br>

                <label>Terrain Type:</label>
                <div class="InputGroup">
                    <label><input type="checkbox" id="single" name="tipTeren[]" value="single"> Single</label>
                    <label><input type="checkbox" id="double" name="tipTeren[]" value="double"> Double</label>
                </div><br>

                <label>Indoor/Outdoor:</label>
                <div class="InputGroup">
                    <label><input type="checkbox" id="unutarnji" name="unutarnjiVanjski[]" value="unutarnji"> Indoor</label>
                    <label><input type="checkbox" id="vanjski" name="unutarnjiVanjski[]" value="vanjski"> Outdoor</label>
                </div><br>

                <label>Price (cheaper than):</label>
                    <input type="number" id="cijena" name="cijena" min="1" step="any">
                <br><br>

                <label>Lighting:</label>
                <div class="InputGroup">
                    <label><input type="radio" id="osvjetljenjeYes" name="osvjetljenje" value="yes"> Yes</label>
                    <label><input type="radio" id="osvjetljenjeNo" name="osvjetljenje" value="no"> No</label>
                </div><br>

                <label>Surface Type (allowed):</label>
                <div class="InputGroup">
                    <label><input type="checkbox" id="beton" name="tipPodloge[]" value="beton"> Concrete</label>
                    <label><input type="checkbox" id="trava" name="tipPodloge[]" value="trava"> Grass</label>
                    <label><input type="checkbox" id="tepih" name="tipPodloge[]" value="tepih"> Carpet</label>
                    <label><input type="checkbox" id="akrilik" name="tipPodloge[]" value="akrilik"> Acrylic</label>
                    <label><input type="checkbox" id="drvo" name="tipPodloge[]" value="drvo"> Wood</label>
                </div><br>

                <label>Current Distance in Kilometers:</label>
                <input type="number" id="udaljenost" name="udaljenost" step="0.01" min="0.2">

                <div class="FormButtons">
                    <button type="submit" class="searchButton">Search</button>
                    <button type="button" class="backButton" onclick="location.href='/home'">‚Üê Back to Home</button>
                </div>

                <input type="hidden" id="userLat" name="userLat">
                <input type="hidden" id="userLong" name="userLong">
                
            </form>
        </div>

        <% if (typeof results !== 'undefined' ) {  %>
            <div class="ResultsSection">
                <h2>Search Results:</h2>
                <% if (results.length > 0) { %>
                    <div class="TerrainResultsGrid">
                        <% results.forEach(function(terrain) { %>
                            <div class="TerrainCard">
                                <h3><%= terrain.imeTeren %></h3>
                                <p>Owner: <%= terrain.username %></p>
                                <p>ID: <%= terrain.terenID %></p>
                                <a href="/terrain/<%= terrain.terenID %>">
                                    <button>View Terrain</button>
                                </a>
                            </div>
                        <% }); %>
                    </div>
                <% } else { %>
                    <p>No terrains found matching the criteria.</p>
                <% } %>
            </div>
        <% } %>

    </body>
</html>